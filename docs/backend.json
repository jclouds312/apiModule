{
  "entities": {
    "User": {
      "title": "User",
      "description": "Represents a user of the application.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": ["admin", "customer"],
          "description": "The user's role."
        }
      },
      "required": ["uid", "email"]
    },
    "ApiModule": {
      "title": "API Module",
      "description": "Represents the state and configuration of an API module in the system.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The human-readable name of the API."
        },
        "description": {
          "type": "string",
          "description": "A short summary of what the API does."
        },
        "category": {
          "type": "string",
          "description": "The category the API belongs to (e.g., 'AI', 'Commerce')."
        },
        "status": {
          "type": "string",
          "enum": ["active", "inactive", "maintenance"],
          "description": "The current operational status of the API."
        },
        "usageCount": {
          "type": "number",
          "description": "How many times the API has been called."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "When the API module was first registered in the system."
        }
      },
      "required": ["name", "status"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the sales system.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "category": {
          "type": "string"
        },
        "stock": {
          "type": "number"
        }
      },
      "required": ["name", "price", "category", "stock"]
    },
    "Sale": {
      "title": "Sale",
      "description": "Represents a sales transaction.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "productId": { "type": "string" },
              "quantity": { "type": "number" }
            }
          }
        },
        "total": {
          "type": "number"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "paid", "cancelled"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "items", "total", "status", "createdAt"]
    },
    "Reservation": {
      "title": "Reservation",
      "description": "Represents a service reservation.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "serviceId": {
          "type": "string"
        },
        "startTime": {
          "type": "string",
          "format": "date-time"
        },
        "endTime": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["confirmed", "cancelled"]
        }
      },
      "required": ["userId", "serviceId", "startTime", "endTime", "status"]
    },
    "Quote": {
      "title": "Quote",
      "description": "Represents a quote generated from a voice command.",
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "transcription": {
          "type": "string"
        },
        "quoteDetails": {
          "type": "object",
          "properties": {}
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["userId", "transcription", "createdAt"]
    },
    "Integration": {
      "title": "Integration",
      "description": "Represents an external API integration with its credentials.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the integration (e.g., 'google-maps')."
        },
        "key": {
          "type": "string",
          "description": "The API key or secret for the integration."
        },
        "active": {
          "type": "boolean",
          "description": "Whether the integration is currently active."
        }
      },
      "required": ["name", "active"]
    }
  },
  "auth": {
    "providers": ["email-password", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
     "/apiModules/{moduleId}": {
      "schema": {
        "$ref": "#/entities/ApiModule"
      },
      "description": "Stores the configuration and status for each API module."
    },
    "/sales/{saleId}": {
      "schema": {
        "$ref": "#/entities/Sale"
      },
      "description": "Stores sales records."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores product information."
    },
    "/reservations/{reservationId}": {
      "schema": {
        "$ref": "#/entities/Reservation"
      },
      "description": "Stores reservation details."
    },
    "/quotes/{quoteId}": {
      "schema": {
        "$ref": "#/entities/Quote"
      },
      "description": "Stores voice-generated quotes."
    },
    "/integrations/{integrationId}": {
      "schema": {
        "$ref": "#/entities/Integration"
      },
      "description": "Stores API keys and configurations for external service integrations."
    }
  }
}
